<!DOCTYPE html>
<html>
<head>
  <title>Yuci's Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <%= javascript_include_tag 'ckeditor/ckeditor.js' %>
  
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top">
	<ul class="nav navbar-nav navbar-left">
		<li class="navbar-brand">Yuci Zhou's Blog</li>
	</ul>
	<ul class="nav navbar-nav navbar-right">
		<% if user_signed_in? %>
		    <li><p class="navbar-text">Signed in as <%= current_user.email if current_user %>.</p></li>
		    <li><%= link_to "Sign Out", destroy_user_session_path, data: { method: "delete"} %></li> 
		    <li><%= link_to "Settings", edit_user_registration_path %></li>
		    <% else %>
		    <li><%= link_to "Log In", new_user_session_path  %></li>
		<% end %>
	</ul>
</nav>




<div class="container">
	<% if notice %>
	<p class="alert alert-success"><%= notice %></p>
	<% end -%>
	<% if alert %>
	<p class="alert alert-danger"><%= alert %></p>
	<% end -%>
	
	<%= yield %>
	</div>
</div>

</body>
</html>
