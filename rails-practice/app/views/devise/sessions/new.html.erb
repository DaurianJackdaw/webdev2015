<div class="container">

<div class="form-horizontal">
  <div class="form-group">
    <h2 class="col-sm-offset-2">Log in</h2>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-5">
    <%= f.email_field :email, autofocus: true , class: 'form-control col-sm-2' %>
  </div>
  </div>

  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Password
    </label>
    <div class="col-sm-5">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox col-sm-offset-2">
      <%= f.check_box :remember_me %>
      Remember Me
    </div>
    <br />
  <% end -%>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-5">
    <%= f.submit "Log in", class: 'btn btn-primary' %> <br>
    <p><%= render "devise/shared/links" %></p>
  </div>
<% end %>

</div>

