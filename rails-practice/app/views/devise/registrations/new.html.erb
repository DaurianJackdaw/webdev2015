<div class="container">

<div class="form-horizontal">
  <div class="form-group">
    <h2 class="col-sm-offset-2">Sign up</h2>
  </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-5">
    <%= f.email_field :email, autofocus: true , class: 'form-control col-sm-2' %>
  </div>
  </div>

  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Password
    </label>
    <div class="col-sm-5">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
  <div class="col-sm-offset-2 col-sm-5">
    <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
  </div>
  </div>

  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Password confirmation
    </label>
    <div class="col-sm-5">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-5">
    <%= f.submit "Sign up", class: 'btn btn-primary' %> <br>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
</div>

</div>
