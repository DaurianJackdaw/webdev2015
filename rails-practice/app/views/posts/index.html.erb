<div class="row">
  <div class="col-md-9">
        <% @pages.each do |post| %>
        <div class="container">
            <h2><%= link_to post.title, post %></h2>
            <p><small>Published at <%= post.created_at %>.</small></p>
            <% if post.body != nil %>
            <article><%= post.body.html_safe %></article>
            <% else %>
            <% end %>
            <% if user_signed_in? %>
            <%= link_to 'Edit', edit_post_path(post) %> | 
            <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
        </div>
        <% end %>
  </div>
  <div class="col-md-3">
      <h2>About Me</h2>
      <p>My Name is Yuci Zhou. </p>
      <p>I'm a film geek, photographer, and a director-wannabe. </p>
  </div>
</div>
<br>
<div class="container">
<% if user_signed_in? %>
<%= link_to 'Create a new post', new_post_path %>
<% end %>
</div>
<br>
<center><%= paginate @pages %></center>